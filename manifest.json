{
  "manifest_version": 3,
  "name": "Password Manager",
  "version": "0.0.1",
  "permissions": ["storage"],
  "background": {
    "service_worker": "dist/background/index.js"
  },
  "action": {
    "default_popup": "dist/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/index.js"]
    }
  ]
}
